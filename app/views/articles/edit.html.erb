  <%= simple_form_for(@article) do |f| %>
    <%= f.input :title %>
    <%= f.input :meta_title %>
    <%= f.input :summary %>
    <%= f.input :content %>
    <%= f.input :slug %>
    <%= f.input :category, :label => "Which category is this in", :collection => %w[hospitality construction] %>
    <%= f.submit "Add Article" %>
  <% end %>
